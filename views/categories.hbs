<div class="container" style="padding-top: 60px">
    <div class="row">
        <div class="col-md-12">
            <h2>Categories</h2>
            <hr/>

            {{#if categories }}
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                        </tr>
                        </thead>

                        <tbody>
                        {{#each categories}}
                            <tr>
                                <td><a href="/posts?category={{this.id}}">{{this.id}}</td>
                                <td><a href="/posts?category={{this.id}}">{{this.category}}</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            {{/if}}

            {{#unless categories}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
            {{/unless}}
        </div>
    </div>
</div>